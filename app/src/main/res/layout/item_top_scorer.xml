<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp"
        app:cardUseCompatPadding="true"
        android:animateLayoutChanges="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_152sdp">

            <TextView
                android:id="@+id/item_tv_score_hint"
                android:text="Goal Scored"
                android:gravity="center"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sdp"
                android:background="@color/colorAccentCard"
                android:textColor="@android:color/white"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/raleway"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/item_tv_score"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="wrap_content"
                android:background="#F5F5F5"
                android:fontFamily="@font/titillium_web_bold"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:text="8"
                android:textColor="@android:color/black"
                android:textSize="@dimen/_45sdp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_tv_score_hint" />

            <TextView
                android:id="@+id/item_tv_team_name"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="0dp"
                android:background="#0BBB72"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:lines="2"
                android:padding="@dimen/_5sdp"
                android:text="Manchester United"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/item_tv_score" />


            <TextView
                android:id="@+id/item_jersey_no"
                android:text="10"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:textColor="@android:color/white"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/ic_jersey"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/raleway"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_tv_score_hint"/>

            <TextView
                android:id="@+id/item_player_name"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#F5F5F5"
                android:ellipsize="end"
                android:fontFamily="@font/titillium_web_semibold"
                android:gravity="center_vertical"
                android:lines="1"
                android:padding="@dimen/_5sdp"
                android:text="Lionel Messi"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_jersey_no"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/item_player_position"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#F5F5F5"
                android:drawableStart="@drawable/small_bullet_background"
                android:drawablePadding="@dimen/_5sdp"
                android:fontFamily="@font/poppins"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:text="Attacker"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/item_tv_score_hint"
                app:layout_constraintTop_toBottomOf="@+id/item_player_name" />

            <TextView
                android:id="@+id/item_player_birthday"
                android:text="Birthday : 28 Sept"
                android:background="#F5F5F5"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:textSize="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:fontFamily="@font/raleway"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@drawable/small_bullet_background"
                app:layout_constraintTop_toBottomOf="@+id/item_player_position"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/item_player_position"/>

            <TextView
                android:id="@+id/item_player_country"
                android:layout_width="0dp"
                android:layout_height="@dimen/_32sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="#F5F5F5"
                android:drawableStart="@drawable/small_bullet_background"
                android:drawablePadding="@dimen/_5sdp"
                android:ellipsize="end"
                android:fontFamily="@font/raleway"
                android:gravity="center_vertical"
                android:lines="1"
                android:padding="@dimen/_5sdp"
                android:text="Country : Argentina"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/item_player_position"
                app:layout_constraintTop_toBottomOf="@+id/item_player_birthday" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>