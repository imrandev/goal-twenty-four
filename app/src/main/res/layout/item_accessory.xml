<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        app:cardUseCompatPadding="true"
        app:cardElevation="2dp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:animateLayoutChanges="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_product_image"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textColor="@android:color/darker_gray"
                android:text="Match Day"
                android:gravity="center"
                android:padding="@dimen/_5sdp"
                android:fontFamily="@font/raleway"
                android:src="@drawable/baseline_shopping_bag_red_900_48dp"
                android:adjustViewBounds="true"
                app:layout_constraintEnd_toStartOf="@+id/view_center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/view_center"
                android:layout_width="1dp"
                android:layout_height="1dp"
                android:fontFamily="@font/raleway"
                app:layout_constraintHorizontal_bias="0.4"
                app:layout_constraintVertical_bias="0.6"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/item_tv_product_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:fontFamily="@font/poppins"
                android:lines="3"
                android:paddingTop="@dimen/_2sdp"
                android:paddingStart="@dimen/_5sdp"
                android:paddingEnd="@dimen/_5sdp"
                android:text="Adjustable Masks Unisex Outdoor Arsenal Face Mask Reusable Anti Dust Face Cover"
                android:textSize="@dimen/_12sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view_center" />

            <Button
                android:id="@+id/btn_buy_now"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/btn_buy_now"
                android:ellipsize="end"
                android:fontFamily="@font/titillium_web_bold"
                android:gravity="center"
                android:lines="2"
                android:padding="@dimen/_5sdp"
                android:text="Buy Now"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_14sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/view_center"
                app:layout_constraintTop_toBottomOf="@+id/view_center"
                 />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>
