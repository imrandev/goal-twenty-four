<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        android:padding="@dimen/_5sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_tv_team_position"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins"
                android:gravity="center"
                android:text="1"
                android:textSize="@dimen/_14sdp" />

            <ImageView
                android:id="@+id/item_iv_team_logo"
                app:srcCompat="@drawable/ic_epl"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_width="@dimen/_24sdp"
                android:layout_height="@dimen/_24sdp"/>

            <TextView
                android:id="@+id/item_tv_team_name"
                android:layout_width="@dimen/_126sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:ellipsize="end"
                android:fontFamily="@font/titillium_web"
                android:gravity="center_vertical"
                android:lines="1"
                android:text="Chelsea"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/item_tv_match_played"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/titillium_web"
                android:gravity="center"
                android:text="MP"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/item_tv_match_won"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/titillium_web"
                android:gravity="center"
                android:text="W"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/item_tv_match_draw"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/titillium_web"
                android:gravity="center"
                android:text="D"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/item_tv_match_lost"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/titillium_web"
                android:gravity="center"
                android:text="L"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/item_tv_goal_for"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/titillium_web"
                android:gravity="center"
                android:text="GF"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/item_tv_goal_against"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/titillium_web"
                android:gravity="center"
                android:text="GA"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/item_tv_goal_difference"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/titillium_web"
                android:gravity="center"
                android:text="GD"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/item_tv_match_points"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:fontFamily="@font/titillium_web"
                android:gravity="center"
                android:text="Pts"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>
    </HorizontalScrollView>
</layout>