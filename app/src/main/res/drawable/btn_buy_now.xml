<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="@color/colorAccentCard"/>
                </shape>
            </item>
            <item
                android:gravity="start"
                android:drawable="@drawable/baseline_shopping_cart_white_24dp"
                android:left="@dimen/_15sdp"
                android:right="@dimen/_15sdp"
                android:top="@dimen/_13sdp"
                android:bottom="@dimen/_13sdp"
                />
        </layer-list>
    </item>

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#D8BB00"/>
                </shape>
            </item>
            <item
                android:gravity="start"
                android:drawable="@drawable/baseline_shopping_cart_white_24dp"
                android:left="@dimen/_15sdp"
                android:right="@dimen/_15sdp"
                android:top="@dimen/_13sdp"
                android:bottom="@dimen/_13sdp"
                />
        </layer-list>
    </item>
</selector>